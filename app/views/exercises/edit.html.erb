<%= form_tag "/exercises/#{@exercise.id}/update", method: :patch do %>
  <%= select_tag "category", raw("<option>Upper Body</option><option>Lower Body</option><option>Full Body</option>"), multiple: true %>
  <%= select_tag "muscle_group", raw("<option>Chest</option><option>Legs</option><option>Abs</option>"), multiple: true %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @exercise.name %>
  <%= label_tag :sets %>
  <%= number_field_tag :sets, @exercise.sets %>
  <%= label_tag :reps %>
  <%= number_field_tag :reps, @exercise.reps %>
  <%= label_tag :weight %>
  <%= number_field_tag :weight, @exercise.weight %>
  <%= label_tag :rest_time %>
  <%= number_field_tag :rest_time, @exercise.rest_time %>
  <%= submit_tag "Update" %>
<% end %>